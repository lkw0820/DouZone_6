package kosa.mission;

public class Book {
	//필드
	String name;
	int price;
	
	//생성자
	public Book() {}
	public Book(String name, int price) {
		super();
		this.name = name;
		this.price = price;
	}
	
	//메소드
	public double DC(int price) {
		if(price>=30000) {
			price-=price*100/25;
		}else if(price>=20000) {
			price-=price*10/2;
		}else if(price>=15000) {
			price-=price*100/15;
		}
		return price;
	}
	
	public void p_print(String name, int price, int disPrice) {
		System.out.println(name+" 교재는 정가는 "+price+"원 할인된 가격은 "+disPrice+"원 입니다");
	}
	
	

}
