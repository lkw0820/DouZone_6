package kosa.mission;

import java.util.Scanner;

public class Mission7 {
	//추가 메소드 add()과일 추가
	public static void add(String[] fruits) {
		Scanner sc = new Scanner(System.in);
		System.out.println("추가할 과일 이름: ");
		String f = sc.nextLine();
		for(int i=0; i<fruits.length;i++) {
			if(fruits[i]==null) {
				fruits[i]=f;
				return;
			}
		}
	}
	
	//출력 메소드 print() 과일 목록 출력
	public static void fprint(String[] fruits) {
		int i=0;
		while(true) {
			if(fruits[i]==null) {
				return;
			}
			System.out.println(fruits[i]);
			i++;
		}
	}

	public static void main(String[] args) {
		// 메뉴를 선택해서 해당 메뉴의 명령문을 실행
		// 1.추가 2.출력 3.검색  4.종료
		Scanner sc = new Scanner(System.in);
		String[] fruits = new String[10];
		System.out.println("1.추가 2.출력 3.검색  4.종료");
		int i=0;
		
		while(true) {
			System.out.print("입력하세요: ");
			i = sc.nextInt();
			//1
//			if(i==1)
//				System.out.println("추가 선택됨");
//			if(i==2)
//				System.out.println("출력 선택됨");
//			if(i==3)
//				System.out.println("검색 선택됨");
//			if(i==4) {
//				System.out.println("프로그램 종료");
//				break;
//			}
			//2
			switch (i) {
			case 1:
				System.out.println("추가 선택됨");
				add(fruits);
				break;
			case 2:
				System.out.println("출력 선택됨");
				fprint(fruits);
				break;
			case 3:
				System.out.println("검색 선택됨");
				break;
			case 4:
				System.out.println("프로그램 종료");
				return; //프로그램 종료

			}
		}
			
	}

}
