package kosa.basic;

import java.util.Arrays;

public class ArraySort {

	public static void main(String[] args) {
		// 배열의 내용에 따라 정렬
		int arr[] = {3,2,5};
		//배열의 내용 문자열로 출력
		System.out.println(Arrays.toString(arr));
		//오름차순 정렬
		Arrays.sort(arr);
		System.out.println(Arrays.toString(arr));
		
		//퀴즈>내림차순
		for(int i=arr.length;i>0;i--) {
			System.out.print(arr[i]);
		}
		

	}

}
