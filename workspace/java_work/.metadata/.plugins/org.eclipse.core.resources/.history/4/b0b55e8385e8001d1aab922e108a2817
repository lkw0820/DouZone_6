package kosa.basic;

public class MethodExam {
	//메서드(함수) 정의
	//접근제어자,(static),리턴형(void), 메서드 이름(파라미터(인자) 매개변수){}
	public static void printCharactor(char ch, int num) {
		for(int i=1;i<=num;i++) {
			System.out.println(ch);
		}
		System.out.println();
	}

	public static void main(String[] args) {

		//메서드 호출
		
		//특정문자를 여러번 출력
		printCharactor('!', 30);
		System.out.println();

		printCharactor('@', 20);
		System.out.println();
	}

}
