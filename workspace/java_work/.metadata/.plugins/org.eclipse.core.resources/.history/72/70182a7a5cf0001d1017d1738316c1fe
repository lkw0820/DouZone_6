package kosa.oop7;

interface A{
	void abc();
}
class B{
	void bcd() {
		System.out.println("메소드 호출");
	}
}

public class RefExam01 {

	public static void main(String[] args) {
		//1. 익명내부클래스
		A a= new A() {
			
			@Override
			public void abc() {
				// TODO Auto-generated method stub
				B b= new B();
				b.bcd();
			}
		};
		a.abc();
	}

}
